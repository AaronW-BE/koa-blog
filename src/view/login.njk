{% extends "layout/blog.njk" %}

{% block styles %}
<link rel="stylesheet" href="/login.css">
{% endblock %}

{% block body %}
<form action="/login.html" method="post">
    <div class="login-form-wrp">
        <div class="title">
            Login
        </div>
        <div class="form-item">
            <input class="input-control" name="username" type="text" placeholder="请输入用户名" />
        </div>
        <div class="form-item">
            <input class="input-control" name="password" type="password" placeholder="请输入密码">
        </div>
        <div class="form-item">
            <button type="submit" class="btn btn-block">登录</button>
        </div>
    </div>
</form>
{% endblock %}
